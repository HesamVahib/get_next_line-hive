{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build all .c files in directory",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/*.c",
                "-I${workspaceFolder}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}",
                "shell": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task to compile all .c files in the directory."
        }
    ],
    "version": "2.0.0"
}
